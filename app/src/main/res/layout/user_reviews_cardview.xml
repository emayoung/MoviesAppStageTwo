<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/four_dips"
        app:cardCornerRadius="@dimen/card_view_dimens"
        >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageView
            android:id="@+id/reviewer_profile_pics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_box_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="@dimen/eight_dips"
            android:layout_marginLeft="@dimen/eight_dips"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/revier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_russian"
            android:textSize="@dimen/text_size_small_heading"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/eight_dips"
            app:layout_constraintLeft_toRightOf="@+id/reviewer_profile_pics"
            android:layout_marginLeft="@dimen/eight_dips" />

        <TextView
            android:id="@+id/reviewer_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:fontFamily="monospace"
            android:textSize="@dimen/text_size_small"
            android:paddingTop="@dimen/eight_dips"
            android:paddingRight="@dimen/eight_dips"
            app:layout_constraintLeft_toRightOf="@+id/reviewer_profile_pics"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/revier_name" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
